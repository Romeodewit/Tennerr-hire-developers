<div class="background-opacity">
	<%# if @service.photos.attached? %>
	  <!-- <div class="service-banner" style="background-image: url('<%= cl_image_path @service.photos[0].key %>')"><h1><%= @service.title %></h1></div> -->
	<%# else %>
	<div class="service-banner" style="background-image: url('<%= asset_path 'generic_photo.jpg', crop: :fill %>');"><h1><%= @service.title %></h1></div>
	<%#end %>
</div>


<div class="w-75 bg-light p-3" style="margin: 0px auto;">
	<div class="row">
		<div class="col-7">	
			<div class="d-flex flex-column" style="width: 100%">
  		  <div class="d-flex flex-column bg-secondary my-2 p-3">
					<p><strong>Price: Â£<%= @service.price %>.00/hr</strong></p>
					<p><strong>Category: <%= @service.category %></strong></p>
				</div>
				<div class="bg-secondary my-2 p-3">
					<p><strong>Description:</strong></p>
					<p><%= @service.description %></p>
				</div>
			</div>
		</div>
		<div class="col-5 bg-secondary my-2 p-3">
			<div>
			<%= simple_form_for([@service, @booking]) do |f| %>
				<%= f.input :deadline, html5: true, label: "Project Deadline" %>
			  <%= f.submit class: "btn btn-dark" %>
			<% end %>
		</div>
	</div>

	<div class="col-12">
		<%= link_to 'Edit', edit_service_path(@service) %>
		<%= link_to 'Delete', @service, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%= link_to 'List', services_path %>
	</div>

	<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
	  <% if @service.photos.attached? %>
  		<% @service.photos.each_with_index do |photo, index| %>
  			<!-- add logical statement to make first photo an active item -->
    		<div class="carousel-item <%= "active" if index.zero? %>" style="width: 300px">
        	<%= cl_image_tag photo.key, class: "card-img-top" %>
    		</div>
      <% end %>
    <% end %>
	</div>
	<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
	  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
	  <span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
	  <span class="carousel-control-next-icon" aria-hidden="true"></span>
	  <span class="sr-only">Next</span>
	</a>
	</div>
	</div>


</div>

