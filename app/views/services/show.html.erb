<div class="container">
  <h1><%= @service.title %></h1>
    <p><strong>Category:</strong>
    	<%= @service.category %> at Â£<%= @service.price %></p>
	    <% if @service.photos.attached? %>
	    	<% @service.photos.each do |photo| %>
	    		<div class="image" style="background-image: url('<%= cl_image_path photo.key %>');"></div>
				<% end %> 
		  <% else %>
			 	<div class="image" style="background-image: url('<%= asset_path 'generic_photo.jpg' %>');"></div>
			<% end %>
    <p><strong>Description:</strong>
	  <%= @service.description %></p>
</div>

<div>
	<%= simple_form_for([@service, @booking]) do |f| %>
		<%= f.input :deadline, html5: true %>
	    <%#= f.input :rating %>
	    <!-- <div class="form-actions"> -->
	    <%= f.submit %>
	<% end %>
</div>

<%= link_to 'Edit', edit_service_path(@service) %>
<%= link_to 'Delete', @service, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'List', services_path %>
