<div class="registration-banner">
    <h1>Find the perfect freelance</h1>
    <h1>services for your business</h1>
  </div>

  <div class="w-75 bg-light py-5 px-3" style="margin: 0 auto">
    <div class="row justify-content-center">
      <div class="col-xs-8 col-lg-6 bg-white pt-3 border border-dark-shadow rounded">
        <div class="row justify-content-center">
          <div class="col-9">
            <h2>Log in</h2>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
            
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "btn btn-dark" %>
                </div>
              <% end %>
            
              <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
</div>
